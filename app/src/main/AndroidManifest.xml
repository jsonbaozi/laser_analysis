<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="delphiki.laser"
    android:versionCode="2" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait" >
        <activity
            android:name="delphiki.laser.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="delphiki.laser.imgDisplay"
            android:label="@string/title_activity_img_display"
            android:parentActivityName="delphiki.laser.MainActivity" >
        </activity>
        <activity
            android:name="delphiki.laser.projTransform"
            android:label="@string/title_activity_proj_transform"
            android:parentActivityName="delphiki.laser.imgDisplay" >
        </activity>
    </application>

</manifest>
